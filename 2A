  <!-- Cart -->
  <div class="card">
    <h2>üõí Your Cart</h2>
    <div id="cartItems"></div>
    <div class="total">Total: ‚Çπ<span id="total">0</span></div>
    <button class="place-order" onclick="placeOrder()">üöÄ Place Order</button>
  </div>
</div>

<script>
  let cart = [];
  let total = 0;

  function addToCart(item, price) {
    cart.push({ item, price });
    total += price;
    renderCart();
  }

  function renderCart() {
    const cartDiv = document.getElementById("cartItems");
    cartDiv.innerHTML = "";
    cart.forEach((c, i) => {
      cartDiv.innerHTML += `
        <div class="cart-item">
          <span>${c.item}</span>
          <span>‚Çπ${c.price} <button onclick="removeItem(${i})">√ó</button></span>
        </div>
      `;
    });
    document.getElementById("total").innerText = total;
  }

  function removeItem(index) {
    total -= cart[index].price;
    cart.splice(index, 1);
    renderCart();
  }

  function placeOrder() {
    if (cart.length === 0) {
      alert("üõí Cart is empty!");
      return;
    }
    alert("‚úÖ Order placed successfully! üöÄ Your food is launching...");
    cart = [];
    total = 0;
    renderCart();
  }
</script>

